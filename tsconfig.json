{
    "compilerOptions": {
        "outDir": "./src/",
        "rootDir": "./lib/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "lib/**/*",
        "__tests__/**/*",
        "types/*.d.ts"
    ]
}