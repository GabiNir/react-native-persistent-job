{
    "compilerOptions": {
        "outDir": "./lib/",
        "rootDir": "./src/",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "types/*.d.ts",
        "node_modules/@types"
    ]
}